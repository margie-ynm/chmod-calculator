<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yatusabes.chmodcalculator.MainActivity"
    android:orientation="vertical"
    android:paddingLeft="@dimen/padding_left_main_block"
    android:paddingRight="@dimen/padding_right_main_block"
    android:paddingTop="@dimen/padding_top_main_block">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chmod Calculator"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/margin_bottom_chmod_calc_label"
        android:textAllCaps="true"
        style="@style/EmphasizeText"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/margin_right_permission_blocks">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_main_label"
                style="@style/MainTextSize"
                android:textAllCaps="true"/>

            <CheckBox
                android:id="@+id/user_read"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_read_label"/>

            <CheckBox
                android:id="@+id/user_write"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_write_label"/>

            <CheckBox
                android:id="@+id/user_execute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_execute_label"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/margin_right_permission_blocks">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/group_main_label"
                style="@style/MainTextSize"
                android:textAllCaps="true"/>

            <CheckBox
                android:id="@+id/group_read"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/group_read_label"/>

            <CheckBox
                android:id="@+id/group_write"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/group_write_label"/>

            <CheckBox
                android:id="@+id/group_execute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/group_execute_label"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/other_main_label"
                style="@style/MainTextSize"
                android:textAllCaps="true"/>

            <CheckBox
                android:id="@+id/other_read"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/other_read_label"/>

            <CheckBox
                android:id="@+id/other_write"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/other_write_label"/>

            <CheckBox
                android:id="@+id/other_execute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/other_execute_label"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_top_linux_permission_block">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Linux Permission:"
            android:layout_gravity="center"
            android:textSize="@dimen/textsize_linux_permission_label" />

        <TextView
            android:id="@+id/answerField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/linux_permission_value"
            android:layout_gravity="center"
            android:textSize="@dimen/textsize_linux_permission_value"
            style="@style/EmphasizeText"/>

    </LinearLayout>

</LinearLayout>
